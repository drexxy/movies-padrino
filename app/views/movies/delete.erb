<h1><%= @movie.title %></h1>
<p><%= @movie.year %></p>
<p><%= @movie.rating %></p>
<p><%= @movie.synopsis %></p>
<img src="<%= @movie.image_url %>">

<p>This will also delete all reviews associated with this movie</p>

<% form_for @movie, url_for(:movies, :delete, :id => params['id']), method: :delete do |f| %>

<%= f.submit "Delete Movie" %>

<% end %>